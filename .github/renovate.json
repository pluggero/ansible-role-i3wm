{
  "extends": [
    "config:best-practices",
    ":disableRateLimiting"
  ],
  "automerge": false,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": ["github-actions", "pip_requirements"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["custom.regex", "ansible-galaxy"],
      "automerge": false
    },
    {
       "matchManagers": ["ansible-galaxy", "custom.regex"],
       "matchPackageNames": ["pluggero/ansible-role-nerdfonts", "pluggero.nerdfonts"],
       "groupName": "nerdfonts"
    }
  ],
  "enabledManagers": [
    "github-actions",
    "pip_requirements",
    "ansible-galaxy"
  ],
  "ansible-galaxy": {
    "managerFilePatterns": [
      "/^requirements\\.ya?ml$/"
    ]
  },
  "assignees": [
    "pluggero"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^meta/main\\.yml$/"
      ],
      "matchStrings": [
        "- role: pluggero\\.nerdfonts\\s+version:\\s+(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "pluggero/ansible-role-nerdfonts",
      "versioningTemplate": "semver"
    }
  ]
}
